</head>


<body>

<div class="container">
  <% allBollywoodNews.forEach(element=>{%>

  
    <div class="card text-center" style="width: 100%; margin-top: 35px;">
      <img class="card-img-top" style="width: 50%; height: auto; margin-left: 25%;" src="<%=element.image%>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%=element.title%></h5>
        <p class="card-text target"><%=element.content%></p>
        <a href="/canal-bollywood/posts/<%=element._id%>" class="btn btn-primary" style="width: 80%; margin-left: 10%; ">Ver Mas</a>
      </div>
    </div>
  
<%})%>

</div>
	
	
	

	
	
	

	
	
	
	
	<script>
        $(".target").each(function(){
            let text = ( $(this).text());
        
            let html = $.parseHTML(text);
            $(this).empty();
            $(this).append(html);
          });
        </script>
	
	
	
	
</body>
</html>