<style type="text/css">
body{
    
  background:linear-gradient(to right,#ff5f6d,#f7b733);
}


.container-fluid {
    width: 90%;
    margin-top: 50px;
}

.col-12.col-sm-12.col-md-5, .col-12.col-sm-12.col-md-7 {
    padding-left: 0px;
    padding-right: 0px;
}


.image-wrapper img {
    width: 100%;
}

#lt-blog p {
    padding-top: 10px;
}	
	

input#read-btn:hover {
    background: #000;
    color: #fff;
}
input#read-btn {
    width: 200px;
    background: transparent;
    font-size: 20px;
    border: 2px solid black;
    color: #000;
}

div#lt-blog p span {
    color: #a9a9a9;
}
div#lt-blog img {
    border: 2px solid #ffffff;
    padding: 10px;
}
