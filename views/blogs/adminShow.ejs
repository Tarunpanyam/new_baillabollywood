<body >


  <div class="container" >
    <div style="border: 1px solid black;">
  <!--  Blog Title-->
  <div class="text-center" style="margin-top:15px ;margin-bottom:15px">
    <h1 class="text-center display-4" style="color:black; font-weight: bold; padding-top:15px; padding-bottom:15px;" ><%= blog.title %></h1>
    <!--  Blog DAte && Blog Creator-->
    <h5 class="text-muted" ><%= blog.time %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Posted By: <%= blog.creator %></h5>
  
    
  </div>
    <!---- Blog Image-->
    <% if(blog.image.localeCompare("")==1){%>
    <div class="text-center" style="margin-top:15px; margin-bottom:15px">
    <img class="img-responsive" style="max-width:100%; height:auto; object-fit: contain;" src="/uploads/<%= blog.image%>" alt="blog-image">
    </div>
    <%  }%>
    <div class="container" style="margin-top:15px; margin-bottom:15px" >
    <!---  Blog Content -->
      <p class="target" style="word-wrap:break-word; font-size: 18px;"><%= blog.content %></p>
    </div class="text-center">
    <div>
    <a  href="/blogs/posts/<%=blog._id%>/edit">
      <button style="width: 80%; " class="btn btn-primary">Edit The Top Part</button>
    </a>
    <a  href="/blogs/posts/<%=blog._id%>/delete">
      <button style="width: 80%; " class="btn btn-danger">Delete Complete Blog</button>
    </a>
  </div>
  </div>
    
    <div class="container">
        <%subBlogz.forEach(function(subBlog){%>
          <div style="border: 1px solid black;">
          
          <div style="padding-top:15px; padding-bottom: 15px;">
          <h4 style="font-weight: 1000;"><%=subBlog.title%></h4>
          </div>
         <% if(subBlog.image.localeCompare("")==1){%>
          <div  class="text-center">
            <img style="max-width:100%; height:auto; object-fit: contain;" src="<%=subBlog.image%>" alt="image">
          </div>
        <%}%>
          <p class="target mt-2" style="word-wrap:break-word; font-size: 18px;"><%=subBlog.content%></p>
        </div>
        <a href="/blogs/posts/<%=blog._id%>/subBlogs/<%=subBlog._id%>/edit">
          <button style="width: 80%; background-color: black;" class="btn btn-primary">Edit</button>
        </a>
        <a href="/blogs/posts/<%=blog._id%>/subBlogs/<%=subBlog._id%>/delete">
          <button style="width: 80%; background-color: black;" class="btn btn-primary">Delete</button>
        </a>
        <%})%>
      </div>
      
    
  </div>
  <div class="container">
    <div class="text-center" style="margin-top:20px; margin-bottom: 20px;">
      <a href="/blogs/<%=blog._id%>/subBlogs/new">
      <button style="width: 80%; background-color: black;" class="btn btn-primary">Add More Parts to this blog</button>
    </a>
    </div>
    </div>
  
  <div class="container">
    <div style="padding-top: 100px; padding-bottom: 150px;">
