<html>
  <head>
    <title>New Distribution</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/blog.css" />
    <script src="//cdn.ckeditor.com/4.14.0/basic/ckeditor.js"></script>
  </head>
  <body>
    <h1 class="text-center">Form for adding new Sub Distribution</h1>
    <div class="container">
        <form action="/distribution/posts/<%=id%>/subDistribution/<%=subDistribution._id%>?_method=PUT" method="POST" >
            <input type="text" name="subDistribution[title]" placeholder="Post title" value="<%=subDistribution.title%>"  autofocus="on" minlength="4"/>
            <textarea id='editor' id="wysiwyg" name="subDistribution[content]" value="<%=subDistribution.content%>" type="text" placeholder="Post Content..." required minlength="30"></textarea>
            <input type="text" name="subDistribution[image]" value="<%=subDistribution.image%>" />
            <input type="submit" value="Publish" />
        </form>
    </div>
    <script>
        CKEDITOR.replace('editor');
        </script>
    </body>
  </html>