<body >

  <% include ../partials/navbar.ejs%>

  <!------------------------------Instrument Start ------------------------>
  <div class="container mobile-container">

    <div class="text-center" style="margin-top:15px ;margin-bottom:15px">
        <h1 class="text-center title-div" style="color:black; font-weight: bold; padding-top:15px; padding-bottom:15px;" ><%= instrument.title %></h1>
        <!--  Blog DAte && Blog Creator-->
      
        
      </div>


      <div class="text-center" style="margin-top:20px; margin-bottom:20px">
        <%if(instrument.image!==""){%>
        <img style="width:100%; height:auto; object-fit: contain;" src="<%= instrument.image%>" alt="instrument-image">
    <%}%>
            
          
    </div>
        <div class="container"  >

            <!---  Blog Content -->
              <p class="target" style="text-align: justify !important; font-size: 18px;"><%= instrument.content %></p>
            </div>
      

  </div>
  <!-------------------------------Instrument End ------------------------->
  <!---------------------------------Subinstrument start-->

  <div class="mobile-container">
    <%instrument.subInstruments.forEach(function(subInstrument){%>
      
      <div>
      <h4 style="font-weight: 1000; margin-top:20px;"><%=subInstrument.title%></h4>
      </div>
     <% if(subInstrument.image!==""){%>
      <div  class="text-center">
        <img style="width:100%; height:auto; object-fit: contain; margin-top: 20px; margin-bottom: 20px;" src="<%=subInstrument.image%>" alt="image">
      </div>
    <%}%>
      <div class="target mt-2" style="text-align: justify !important; font-size: 18px;"><%=subInstrument.content%></div>
    
    <%})%>
  </div>
  <hr>




  <!--------------------------------subinstrument end-->
  
 <% include ../partials/footer-blog.ejs %>   
 
    
  
  
  <div class="mobile-container text-center">
    <hr>
    <div style="padding-top: 100px; padding-bottom: 50px;">
    <form action="/instruments/posts/<%= instrument._id %>/comments" method="POST">

      <h3  style="color:grey">Leave A Reply </h3>
      <input required type="text" style="width: 100%; margin-top:5px; margin-bottom: 15px;" name="comment[name]" placeholder="Name">
      <input required type="email" style="width: 100%;  margin-bottom: 15px;" name="comment[email]" placeholder="Email">
      <textarea required style="width: 100%;" name="comment[text]" rows="5" placeholder="Add Comment Here"></textarea>
      <input required style="margin-top: 20px;  width:150px; "  type="submit" value="Post Comment" />
    </form>
  </div>
  </div> 

  <div class="mobile-container" style="margin-bottom:100px ">
    <% instrument.comments.forEach(comment=>{%>
      <div class="media" style="background-color: #f5f5f5; border-radius: 10px; margin-top: 20px;">
        <div class="media-body">
          <h5 style="font-weight: bold; padding-left: 10px; padding-top: 10px;"><%=comment.name%></h5>
         <p style="padding-top:5px; padding-left: 10px;"> <%= comment.text %></p>
        </div>
      </div>
    <%})%>
  </div>

  

 
 

  


